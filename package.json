{
  "name": "@nebula/root",
  "description": "the root level for nebula",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "yarn workspaces run build",
    "ship": "concurrently \"yarn build:task\" \"yarn pack\"",
    "clean": "concurrently \"yarn clean:root\" \"yarn clean:app\" \"yarn clean:task\"",
    "clean:root": "cross-env rm -rf node_modules",
    "clean:app": "cross-env rm -rf packages/app/node_modules packages/app/build packages/app/dist packages/app/orion",
    "clean:task": "cross-env rm -rf packages/task/node_modules packages/task/build packages/task-built/node_modules packages/task-built/build packages/task-built/dist",
    "build:app": "yarn workspace @nebula/orion build",
    "build:task": "yarn workspace @nebula/task build",
    "build:task:dev": "yarn workspace @nebula/task build:babel",
    "pack": "yarn workspace @nebula/orion publish",
    "dev": "concurrently \"yarn dev-server\" \"yarn dev-app\"",
    "dev-server": "yarn workspace @nebula/orion dev-server",
    "dev-app": "wait-on tcp:3000 && yarn workspace @nebula/orion dev",
    "prod": "yarn workspace @nebula/orion prod",
    "ci": "yarn workspaces run ci",
    "lint": "yarn workspaces run lint",
    "test": "yarn workspaces run test",
    "postinstall": "concurrently \"yarn workspace @nebula/orion afterinstall\" \"yarn workspace @nebula/task afterinstall\""
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.4.5",
    "@babel/plugin-proposal-export-default-from": "^7.2.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.2.0",
    "@babel/plugin-proposal-function-bind": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "24.9.0",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "eslint": "6.5.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "husky": "^1.3.1",
    "jest": "24.9.0",
    "lint-staged": "^8.2.1",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "wait-on": "^3.2.0",
    "yarn": "^1.19.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(json|ya?ml|css[34]?|md(own)?|less|s[ac]ss|gql|html?)": [
      "prettier --write",
      "git add"
    ],
    "*.jsx?": [
      "eslint --no-ignore --fix",
      "git add"
    ]
  }
}
