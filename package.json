{
  "name": "@nebula/nebula-root",
  "description": "the root level for the nebula project",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "yarn workspaces run build",
    "ship": "concurrently 'yarn run build:task' 'yarn run pack'",
    "build:task": "yarn workspace @nebula/task-runner run build",
    "pack": "yarn workspace @nebula/orion run publish",
    "start:dev": "concurrently  'yarn start:frontend:dev' 'yarn start:dev-server'",
    "start:dev-server": "yarn workspace @nebula/orion run dev-server",
    "start:frontend:dev": "wait-on tcp:3000 && yarn workspace @nebula/orion run dev",
    "start:frontend:prod": "yarn workspace @nebula/orion run prod",
    "start:prod": "concurrently 'yarn start:frontend:prod'",
    "ci": "yarn workspaces run ci",
    "lint": "yarn workspaces run lint",
    "test": "yarn workspaces run test",
    "postinstall": "yarn workspace @nebula/orion run afterinstall"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/node": "^7.2.0",
    "@babel/plugin-proposal-export-default-from": "^7.2.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.2.0",
    "@babel/plugin-proposal-function-bind": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.4.3",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "eslint": "5.12.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.11",
    "prettier": "^1.15.3",
    "prettier-eslint": "^8.8.2",
    "replace": "^1.1.0",
    "rimraf": "^2.6.3",
    "sass": "^1.17.4",
    "wait-on": "^3.2.0",
    "yarn": "^1.12.3"
  },
  "resolutions": {
    "write-file-atomic": "2.3.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn ci",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(json|ya?ml|css[34]?|md(own)?|less|s[ac]ss|gql|html?)": [
      "prettier --write",
      "git add"
    ],
    "*.jsx?": [
      "eslint --no-ignore --fix",
      "git add"
    ]
  }
}
